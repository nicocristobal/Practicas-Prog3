package Coralon;

import java.util.ArrayList;

public class Producto {
	
	private String titulo;
	boolean entregado=false;
	private String genero;
	private int id;
	private int stock;
	private ArrayList<String>RegistroDeAlquileres;
	
	public void agregarRegistroPeliculas(Cliente c) {
		String e="El Cliente "+c.imprimirCliente();
		RegistroDeAlquileres.add(e);
	}
	public void agregarRegistroJuego(Cliente c) {
		String e="El Cliente"+c.imprimirCliente();
		RegistroDeAlquileres.add(e);
	}
	
	public void listarRegistro() {
		for(String registro:RegistroDeAlquileres)
			System.out.println(registro);
	}
	
	public String imprimirProducto() {
		return "Producto [titulo=" + getTitulo() + ", entregado=" + isEntregado() + ", genero=" + getGenero() + ", id=" + getId()
				+ ", stock=" + getStock() + "]";
	}
	public void entregar() {
		this.entregado=true;
		setStock(stock-1);
	}
	public void devuelve() {
		this.entregado=false;
		setStock(stock-1);
	}
	public boolean isEntregado() {
		return entregado;
	}
	
	public Producto(String titulo, String genero, int id, int stock, ArrayList<String> registroDeAlquileres) {
		super();
		this.titulo = titulo;
		this.genero = genero;
		this.id = id;
		this.stock = stock;
		RegistroDeAlquileres = registroDeAlquileres;
	}
	public String getTitulo() {
		return titulo;
	}
	public void setTitulo(String titulo) {
		this.titulo = titulo;
	}
	public String getGenero() {
		return genero;
	}
	public void setGenero(String genero) {
		this.genero = genero;
	}
	public int getId() {
		return id;
	}
	public void setId(int id) {
		this.id = id;
	}
	public int getStock() {
		return stock;
	}
	public void setStock(int stock) {
		this.stock = stock;
	}
	public ArrayList<String> getRegistroDeAlquileres() {
		return RegistroDeAlquileres;
	}
	public void setRegistroDeAlquileres(ArrayList<String> registroDeAlquileres) {
		RegistroDeAlquileres = registroDeAlquileres;
	}

	
	
	
	
	
}
